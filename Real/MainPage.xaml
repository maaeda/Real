            <Button
                x:Name="TakePhotoBtn"
                Text="TakePhotoBtn"
                Clicked="OnTakePhotoBtnClicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="LoadPhotosBtn"
                Text="LoadPhotosBtn"
                Clicked="OnLoadPhotosClicked"
                HorizontalOptions="Fill" />

            <CollectionView x:Name="PhotosCollectionView">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="3"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding}"
                               Aspect="AspectFill"
                               HeightRequest="100"
                               WidthRequest="100"
                               Margin="0,0,0,10"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
